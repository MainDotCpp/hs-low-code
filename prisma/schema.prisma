generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model t_domain {
  id        String   @id @db.Uuid
  domain    String   @db.VarChar(255)
  area      String   @db.VarChar(255)
  status    Int      @default(0)
  create_at DateTime @default(now()) @db.Timestamp(6)
}

model t_page {
  id                String    @id @default(uuid()) @db.Uuid
  pid               Int       @default(autoincrement())
  name              String    @db.VarChar(32)
  title             String?   @db.VarChar(32)
  description       String?   @db.Text
  remark            String?   @db.VarChar(255)
  tags              Json      @default("[]") @db.Json
  script            String?   @db.Text
  use_cloak         Boolean   @default(false)
  cloak_label       String?   @db.VarChar(32)
  white_url         String?   @db.Text
  create_at         DateTime? @default(now()) @db.Timestamp(6)
  script_links      Json?     @default("[]") @db.Json
  extra_script      String?   @db.Text
  ban_redirect_link String?   @db.VarChar(255)
  ban_count         Int       @default(0)
  access_count      Int       @default(0)
  content           Json?     @default("{\"children\":[]}") @db.Json
  status            Int       @default(1)
  click_link_count  Int       @default(0)
}

model t_visit_log {
  id                 Int      @id @default(autoincrement())
  ip                 String   @db.VarChar(32)
  cloak_label        String?  @db.VarChar(64)
  use_cloak          Boolean  @default(false)
  filter_type        String   @db.VarChar(32)
  filter_reason      String   @db.VarChar(32)
  user_agent         String?
  language           String?
  host               String?
  create_at          DateTime @default(now())
  sec_ch_ua_platform String?
}
